{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "panels/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
